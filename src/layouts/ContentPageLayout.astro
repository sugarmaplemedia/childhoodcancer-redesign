---
import BaseLayout from "@layouts/BaseLayout.astro";
import Group from "@components/ContentPage/Group.svelte";

type hero = {
    src: string;
    alt: string;
}

interface Props {
    title: string
    description: string
    robots?: boolean
    hero?: hero
    style?: string
}

const {
    title,
    description,
    hero = {
        src: "https://placehold.co/1920x560.jpg",
        alt: "Placeholder image"
    },
    style = ""
} = Astro.props;
---

<BaseLayout
    title={title}
    description={description}>
    
    <!-- HERO -->
    <section class="w-full h-28 sm:h-40 md:h-48 lg:h-72">
        <div class="
                w-full
                flex flex-col items-center">
            <img
                src={hero.src} alt={hero.alt}
                width="1920" height="560"
                class="
                    w-full
                    fixed top-24 -z-20 md:top-16 lg:top-24 xl:top-16
                    scale-150"/>
            <div class="w-full h-40 sm:h-64 lg:h-[30rem]">
            </div>
        </div>
        <img 
            src={`${import.meta.env.BASE_URL}/graphics/swooshes/Asset 8.svg`} alt=""
            class="
                -mb-52 sm:-mb-64 md:-mb-80
                relative z-10
                lg:relative lg:-top-[8.6rem]
                -translate-y-[60%] -rotate-[4deg] scale-150 sm:-translate-y-[75%] md:-translate-y-[64%] lg:-translate-y-[60%]
                pointer-events-none">
    </section>

    <article class={`
            w-full py-12 sm:pt-16 lg:pt-24
            flex flex-col items-center gap-10
            bg-offwhite
            ${style}`}>
        <Group>
            <h1>{title}</h1>
        </Group>
        <slot />
    </article>
</BaseLayout>